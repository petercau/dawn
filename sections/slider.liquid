<link rel="stylesheet" href="{{ 'slick.css' | asset_url }}" media="print" onload="this.media='all'">
<link rel="stylesheet" href="{{ 'slick-theme.css' | asset_url }}" media="print" onload="this.media='all'">

<div class="slider">
  {% for block in section.blocks %}
    <a href="{{ block.settings.link }}">
    <img
      srcset="{%- if block.settings.slider_image.width >= 375 -%}{{ block.settings.slider_image | img_url: '375x' }} 375w,{%- endif -%}
        {%- if block.settings.slider_image.width >= 750 -%}{{ block.settings.slider_image | img_url: '750x' }} 750w,{%- endif -%}
        {%- if block.settings.slider_image.width >= 1100 -%}{{ block.settings.slider_image | img_url: '1100x' }} 1100w,{%- endif -%}
        {%- if block.settings.slider_image.width >= 1500 -%}{{ block.settings.slider_image | img_url: '1500x' }} 1500w,{%- endif -%}
        {%- if block.settings.slider_image.width >= 1780 -%}{{ block.settings.slider_image | img_url: '1780x' }} 1780w,{%- endif -%}
        {%- if block.settings.slider_image.width >= 2000 -%}{{ block.settings.slider_image | img_url: '2000x' }} 2000w,{%- endif -%}
        {%- if block.settings.slider_image.width >= 3000 -%}{{ block.settings.slider_image | img_url: '3000x' }} 3000w,{%- endif -%}
        {%- if block.settings.slider_image.width >= 3840 -%}{{ block.settings.slider_image | img_url: '3840x' }} 3840w,{%- endif -%}"
      sizes="{% if block.settings.slider_image != blank and section.settings.stack_images_on_mobile %}(min-width: 750px) 50vw, 100vw{% elsif section.settings.image_2 != blank %}50vw{% else %}100vw{% endif %}"
      src="{{ block.settings.slider_image | img_url: '1500x' }}"
      loading="lazy"
      alt="{{ block.settings.slider_image.alt | escape }}"
      width="{{ block.settings.slider_image.width }}"
      height="{{ block.settings.slider_image.width | divided_by: block.settings.slider_image.aspect_ratio }}"
    >
    </a>
  {% endfor %}
</div>


<script src="{{ 'jquery-1.11.0.min.js' | asset_url }}"></script>
<script src="{{ 'jquery-migrate-1.2.1.min.js' | asset_url }}"></script>
<script src="{{ 'slick.min.js' | asset_url }}"></script>

{% javascript %}
  $(".slider").slick({
    dots: true,
    infinite: true,
    slidesToShow: 1,
    slidesToScroll: 1
  });
{% endjavascript %}

{% schema %}
{
    "name": "Slider",
    "blocks": [
      {
        "type": "slider",
        "name": "Images",
        "settings": [
          {
            "id": "slider_image",
            "type": "image_picker",
            "label": "Slider Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Url"
          }
        ]
      }
    ],
    "presets": [
        {
        "name": "PromoTwo",
        "category": "Content"
        }
    ]
}
{% endschema %}